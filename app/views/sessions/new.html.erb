<% if alert %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
    <span class="block sm:inline"><%= alert %></span>
  </div>
<% end %>

<% if notice %>
  <div class="bg-teal-100 border-teal-500 rounded-b text-teal-900 px-4 py-3 shadow-md" role="alert">
    <div class="flex">
      <div>
        <p class="text-md"><%= notice %></p>
      </div>
    </div>
  </div>
<% end %>

<div class="bg-white flex justify-center bg-gray-200">
  <p class="text-5xl mt-10 mb-10">Login</p>
</div>

<div class="bg-white rounded-t-lg overflow-hidden border-t border-l border-r border-gray-400 p-4 px-3 py-10 bg-gray-200 flex justify-center">
  <div class="w-full max-w-xs">
    <%= form_tag sessions_path, { :class => "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" } do |form| %>
      <div class="mb-4">
        <%= label_tag :email, nil, :class => "block text-gray-700 text-sm font-bold mb-2" %>
        <%= text_field_tag :email, nil, :placeholder => 'john@doe.com', :class => "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="mb-6">
        <%= label_tag :password, nil, :class => "block text-gray-700 text-sm font-bold mb-2" %>
        <%= password_field_tag :password, nil, :placeholder => '********', :class => "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="flex items-center justify-between">
        <%= submit_tag "Login", :class => "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        <%= link_to 'Forgot password?', password_forgot_path, :class => "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
      </div>
    <% end %>
    <p class="text-center text-gray-500 text-xs">
      &copy;2020 New Company corp. All rights reserved.
    </p>
  </div>
</div>
