<div class="bg-white flex justify-center bg-gray-200">
  <p class="text-5xl mt-10 mb-10">Reset Password</p>
</div>

<% if alert %>
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
    <span class="block sm:inline"><%= alert %></span>
  </div>
<% end %>

<%= render 'form', user: @user %>

<%= link_to 'Go back', login_path, :class => "inline-block mt-5 ml-5 bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded-l" %>
