<div class="bg-white rounded-t-lg overflow-hidden p-4 px-3 py-10 bg-gray-200 flex justify-center">
  <div class="w-full max-w-xs">
    <%= form_with(model: user, local: true) do |form| %>
      <% if user.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <strong class="font-bold">Something went wrong!</strong>
          <% user.errors.full_messages.each do |message| %>
            <span class="block sm:block"><%= message %></span>
          <% end %>
        </div>
      <% end %>

      <div class="mb-4">
        <%= label_tag :user, :email, :class => "block text-gray-700 text-sm font-bold mb-2" %>
        <%= text_field :user, :email, :disabled => current_user.present?, :placeholder => 'john@doe.com', :class => "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-6">
        <%= label_tag :user, :password, :class => "block text-gray-700 text-sm font-bold mb-2" %>
        <%= password_field :user, :password, :placeholder => '********', :class => "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-6">
        <%= label_tag :user, :password_confirmation, :class => "block text-gray-700 text-sm font-bold mb-2" %>
        <%= password_field :user, :password_confirmation, :placeholder => '********', :class => "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <% if current_user.present? %>
        <div class="mb-4">
          <%= label_tag :username, nil, :class => "block text-gray-700 text-sm font-bold mb-2" %>
          <%= text_field :user, :username,:value => user.username, :placeholder => 'Your username', :class => "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
      <%end %>

      <div class="flex items-center justify-between">
        <%= form.submit(:class => "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline") %>
      </div>
    <% end %>
  </div>
</div>
